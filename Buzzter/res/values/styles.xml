<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="BuzzterTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="@android:actionBarStyle">@style/BuzzterTheme.ActionBarStyle</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/BuzzterTheme.ActionBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="BuzzterTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
    	<item name="android:background">@drawable/actionbar_background</item>
        <item name="@android:titleTextStyle">@style/BuzzterTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="@android:backgroundStacked">@color/actionbar_background</item>>
       <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
        <item name="titleTextStyle">@style/BuzzterTheme.ActionBarStyle.TitleTextStyle</item>
    </style>
  	<style name="BuzzterTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Large.Inverse">
    	<item name="android:textColor">@color/actionbar_text</item>
  	</style>
  	
  	
</resources>
