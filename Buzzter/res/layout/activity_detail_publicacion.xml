<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFF">
	
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        
    
    <TextView
            android:id="@+id/txt_publicacion_detail_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/prueba_titulo"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="5dp" >

       <TextView
           android:id="@+id/txt_publicacion_detail_tipo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/shape"
           android:padding="5dp"
           android:text="@string/prueba_tipo"
           android:textAppearance="?android:attr/textAppearanceSmallInverse"
           android:textColor="@color/publicacion_tipo_background"  />

       <TextView
           android:id="@+id/txt_publicacion_detail_tiempo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:text="@string/prueba_tiempo"
           android:textAppearance="?android:attr/textAppearanceSmall" />
   </LinearLayout>
   
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="5dp" >
       
        <TextView
            	android:id="@+id/txt_publicacion_escrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publicacion_escrito"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
                android:id="@+id/txt_publicacion_detail_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prueba_usuario"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp" />
       </LinearLayout>
       
        <TextView
            android:id="@+id/txt_publicacion_detail_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prueba_descripcion"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:layout_marginTop="5dp"/>
        
        <ImageView
            android:id="@+id/img_publicacion_detail_imagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="384dp"
            android:scaleType="centerInside"
            android:layout_margin="5dp" 
            android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDD"
        android:orientation="vertical"
        android:padding="5dp">
		    <TextView
            android:id="@+id/txt_publicacion_detail_estrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/publicacion_detail_estrellas"
            android:textAppearance="?android:attr/textAppearanceSmall" />
		    <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
		    
		    <TextView
	          android:id="@+id/txt_publicacion_detail_texto_votos"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:gravity="center"
	          android:text="@string/publicacion_detail_votos"
	          android:textAppearance="?android:attr/textAppearanceSmall" />
		    <TextView
	            android:id="@+id/txt_publicacion_detail_votos"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center" 
	            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/list_comentarios"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	</LinearLayout>
	</LinearLayout>
</ScrollView>